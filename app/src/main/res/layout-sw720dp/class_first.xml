<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/class_first_Admin_toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/innerLayoutAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/student_info_background"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/nameTextAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rollTextAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No:"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/classTextAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class: "
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/examTextAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spinner_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"

                />

        </LinearLayout>




    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_marks_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="English"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_marks_english"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/text_marks_english"
            android:background="@drawable/edit_background"
            android:ems="5"
            android:hint="marks"
            android:inputType="number"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/text_marks_mathematics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_marks_english"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:text="Mathematics"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_marks_mathematics"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/edt_marks_english"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/text_marks_mathematics"
            android:background="@drawable/edit_background"
            android:ems="5"
            android:hint="marks"
            android:inputType="number"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/text_marks_Bengali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_marks_mathematics"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Bengali"

            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_marks_Bengali"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/edt_marks_mathematics"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/text_marks_Bengali"
            android:background="@drawable/edit_background"
            android:ems="5"
            android:hint="marks"
            android:inputType="number"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/text_marks_Hindi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_marks_Bengali"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Hindi"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_marks_Hindi"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/edt_marks_Bengali"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/text_marks_Hindi"
            android:background="@drawable/edit_background"
            android:ems="5"
            android:hint="marks"
            android:inputType="number"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_marks_MoralEd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_marks_Hindi"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Moral Edu"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_marks_MoralEdu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/edt_marks_Hindi"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/text_marks_MoralEd"
            android:background="@drawable/edit_background"
            android:ems="5"
            android:hint="marks"
            android:inputType="number"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/text_marks_drawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_marks_MoralEd"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Drawing"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edt_marks_drawing"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/edt_marks_MoralEdu"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/text_marks_drawing"
            android:background="@drawable/edit_background"
            android:ems="5"
            android:hint="marks"
            android:inputType="number"
            android:textColor="@android:color/black" />


        <Button
            android:id="@+id/btn_add_update_marks"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/text_marks_drawing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_color"
            android:text="Add"
            android:textSize="18sp" />


    </RelativeLayout>


</LinearLayout>
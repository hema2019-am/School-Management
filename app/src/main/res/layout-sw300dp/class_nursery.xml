<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <include layout="@layout/toolbar"
        android:id="@+id/class_nursery_admin_toolbar"/>




    <LinearLayout
        android:id="@+id/innerLayoutAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/student_info_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="17sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/rollTextAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No:"
            android:textSize="17sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/classTextAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class: "
            android:textSize="17sp"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/examTextAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam: "
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/spinner_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="17sp"

                />

        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/text_marks_englishLiterature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="English Literature"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_marks_englishLiterature"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/text_marks_englishLiterature"
                android:background="@drawable/edit_background"
                android:ems="5"
                android:hint="marks"
                android:inputType="number"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_marks_englishHandwriting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_marks_englishLiterature"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:text="English Handwriting"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_marks_englishHandwriting"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/edt_marks_englishLiterature"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/text_marks_englishHandwriting"
                android:background="@drawable/edit_background"
                android:ems="5"
                android:hint="marks"
                android:inputType="number"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_marks_conversationClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_marks_englishHandwriting"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Conversation Class"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_marks_conversationClass"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/edt_marks_englishHandwriting"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/text_marks_conversationClass"
                android:background="@drawable/edit_background"
                android:ems="5"
                android:hint="marks"
                android:inputType="number"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/text_marks_mathematics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_marks_conversationClass"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="29dp"
                android:text="Mathematics"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_marks_mathematics"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/edt_marks_conversationClass"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/text_marks_mathematics"
                android:background="@drawable/edit_background"
                android:ems="5"
                android:hint="marks"
                android:inputType="number"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/text_marks_Rhymes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_marks_mathematics"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="29dp"
                android:text="Rhymes"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_marks_Rhymes"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/edt_marks_mathematics"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/text_marks_Rhymes"
                android:background="@drawable/edit_background"
                android:ems="5"
                android:hint="marks"
                android:inputType="number"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/text_marks_drawing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_marks_Rhymes"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="34dp"
                android:text="Drawing"

                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_marks_drawing"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/edt_marks_Rhymes"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/text_marks_drawing"
                android:background="@drawable/edit_background"
                android:ems="5"
                android:hint="marks"
                android:inputType="number"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_marks_PT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_marks_drawing"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                android:text="PT"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_marks_PT"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/edt_marks_drawing"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/text_marks_PT"
                android:background="@drawable/edit_background"
                android:ems="5"
                android:hint="marks"
                android:inputType="number"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_add_update_marks"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/text_marks_PT"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_color"
                android:text="Add"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


        </RelativeLayout>


    </ScrollView>



</LinearLayout>
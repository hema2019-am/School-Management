<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Search_and_Update"
    android:background="@android:color/white">

    <include
        android:id="@+id/search_update_student"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/txt_update_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="35sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/search_update_student"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/edt_update_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_toRightOf="@id/txt_update_roll_call"
        android:layout_below="@id/search_update_student"
        android:layout_marginTop="100dp"
        android:textSize="18sp"
        android:hint="name"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/txt_update_roll_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll No: "
        android:textSize="35sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txt_update_name"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/edt_update_roll_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_toRightOf="@id/txt_update_roll_call"
        android:layout_below="@id/edt_update_name"
        android:layout_marginTop="40dp"
        android:hint="roll number"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>






    <TextView
        android:id="@+id/txt_update_class_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class: "
        android:textSize="35sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txt_update_roll_call"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"


        />


    <Spinner
        android:id="@+id/edt_update_class_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_update_class_update"
        android:layout_below="@id/edt_update_roll_call"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="20dp"/>



    <TextView
        android:id="@+id/txt_Search_examType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_update_class_update"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="15dp"
        android:text="Exam: "
        android:textColor="@android:color/black"
        android:textSize="35sp"


        />


    <Spinner
        android:id="@+id/edt_Search_examType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_update_class_update"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/txt_Search_examType"/>

    <Button
        android:id="@+id/btn_search_update_student"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_color"
        android:text="Search"
        android:layout_below="@id/edt_Search_examType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />





</RelativeLayout>